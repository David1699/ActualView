<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.actualview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Adapters.MyFirebaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/icono_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SeriesActivity" />
        <activity android:name=".activities.PeliculasActivity" />
        <activity android:name=".activities.MisSeriesActivity" />
        <activity android:name=".activities.MisPeliculasActivity" />

        <activity android:name=".login.CerrarSesion" />
        <activity android:name=".login.Registro" />
        <activity android:name=".login.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>